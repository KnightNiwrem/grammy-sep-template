{
  "lock": false,
  "tasks": {
    "check": "deno check --allow-import src/mod.ts",
    "test": "deno test --allow-all",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "ok": "deno task fmt && deno task lint && deno task test && deno task check"
  },
  "fmt": {
    "indentWidth": 2,
    "proseWrap": "preserve"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/expect": "jsr:@std/expect@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "grammy": "https://lib.deno.dev/x/grammy@v1/mod.ts"
  }
}
